{
    "name": "vscode-pastemyst",
    "displayName": "vscode-pastemyst",
    "description": "a thing",
    "publisher": "mellobacon",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.55.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onView:pastemyst.viewer",
        "onCommand:pastemyst.commands.view"
    ],
    "main": "./dist/extension.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/mellobacon/vscode-pastemyst"
    },
    "contributes": {
        "views": {
            "pastemyst": [
                {
                    "id": "pastemyst.viewer",
                    "name": "Paste Viewer"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "pastemyst",
                    "icon": "./resources/pastemyst.svg",
                    "title": "PasteMyst"
                }
            ]
        },
        "viewsWelcome": [
            {
                "view": "pastemyst.viewer",
                "contents": "No pastes retrieved yet.\n[Get new paste](command:pastemyst.commands.view)"
            }
        ],
        "commands": [
            {
                "command": "pastemyst.commands.view",
                "title": "PasteMyst: View Paste"
            },
            {
                "command": "pastemyst.commands.viewer.unload",
                "title": "Unload",
                "enablement": "view == pastemyst.viewer",
                "icon": "$(diff-review-close)"
            }
        ],
        "menus": {
            "view/item/context": [
                {
                    "command": "pastemyst.commands.viewer.unload",
                    "when": "view == pastemyst.viewer && viewItem == paste",
                    "group": "inline"
                }
            ]
        },
        "configuration": {
            "title": "PasteMyst",
            "properties": {
                "pastemyst.apiToken": {
                    "type": "string",
                    "default": "",
                    "description": "The API token to authorize the PasteMyst service with. Specifying a valid token here allows you to fetch your private pastes, and also create new pastes in your own profile. Note that currently you need to restart VSCode for the changes to take effect."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "test-compile": "tsc -p ./",
        "test-watch": "tsc -watch -p ./",
        "pretest": "npm run test-compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.55.0",
        "@types/glob": "^7.1.3",
        "@types/node": "^12.11.7",
        "eslint": "^7.19.0",
        "@typescript-eslint/eslint-plugin": "^4.14.1",
        "@typescript-eslint/parser": "^4.14.1",
        "glob": "^7.1.6",
        "typescript": "^4.1.3",
        "ts-loader": "^8.0.14",
        "webpack": "^5.19.0",
        "webpack-cli": "^4.4.0"
    },
    "dependencies": {
        "pastemyst-ts": "^1.0.3"
    }
}
